<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="cacheEnabled" value="false" /> 
		<setting name="jdbcTypeForNull" value="NULL" />
	    <setting name="callSettersOnNulls" value="true"/>    
	    <setting name="returnInstanceForEmptyRow" value="true"/>
	</settings>
	<typeAliases>
		<!-- 의약품 정보 -->
    	<typeAlias alias="DruginfoVO" type="com.nocdu.druginfo.druginfo.vo.DrugInfoVO"/>
    	
    	<!-- 의약품 모양 정보 -->
    	<typeAlias alias="PillInfoVO" type="com.nocdu.druginfo.pillinfo.vo.PillInfoVO"/>
    	
    	<!-- 의약품 상세 정보 -->
    	<typeAlias alias="DrugDetailInfoVO" type="com.nocdu.druginfo.drugdetailinfo.vo.DrugDetailInfoVO"/>
   	</typeAliases>
</configuration>