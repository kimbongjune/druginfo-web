<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans https://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 메시지소스 암호화 설정 -->
    <bean id="environmentVariablesConfiguration" class="org.jasypt.encryption.pbe.config.EnvironmentStringPBEConfig">
        <property name="algorithm" value="PBEWITHMD5ANDTRIPLEDES"/>
        <property name="password" value="bs"/>
    </bean>
    <bean id="configurationEncryptor" class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor">
        <property name="config" ref="environmentVariablesConfiguration"/>
    </bean>
    <bean id="propertyConfig" class="org.jasypt.spring31.properties.EncryptablePropertyPlaceholderConfigurer">
        <constructor-arg ref="configurationEncryptor"/>
        <property name="location" value="classpath:/globals.properties"/>
    </bean>
    <!-- 메시지소스 암호화 설정 끝 -->
    
    <!-- 데이터베이스 연결 정보 -->
	<bean id="dataSource"
        class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${db.aws.driver}"></property>
        <property name="url" value="${db.aws.url}"></property>
        <property name="username" value="${db.aws.user}"></property>
        <property name="password" value="${db.aws.password}"></property>
        <property name="validationQuery" value="select 1 from dual" />
		<property name="testWhileIdle" value="true" />
		<property name="timeBetweenEvictionRunsMillis" value="600000" />
    </bean>
    <!-- 데이터베이스 연결 정보 끝 -->
    
    <!-- 마이바티스 설정 -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"></property>
        <property name="configLocation" value="classpath:/mybatis-config.xml" />
 		<property name="mapperLocations" value="classpath:mappers/**/*mysql.xml" />
	</bean>
	<!-- 마이바티스 설정 끝 -->

	<!-- 데이터베이스 연결 설정 -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate" destroy-method="clearCache">
 		<constructor-arg name="sqlSessionFactory" ref="sqlSessionFactory"/>
	</bean>
	<!-- 데이터베이스 연결 설정 끝 -->
		
	<!-- 메시지소스 파일 설정 -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
			<value>classpath:/globals</value>
			</list>
		</property>
		<property name="cacheSeconds">
			<value>60</value>
		</property>
		<property name="defaultEncoding" value="UTF-8"/>
	</bean>
	<!-- 메시지소스 파일 설정 끝 -->
	
	<!-- 메시지소스  설정 -->
	<bean id="egovMessageSource" class="com.nocdu.druginfo.EgovMessageSource">
		<property name="reloadableResourceBundleMessageSource">
			<ref bean="messageSource"/>
		</property>
	</bean>
	<!-- 메시지소스  설정 끝 -->
</beans>
